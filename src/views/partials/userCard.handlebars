<div class="user-card">
    <h3>{{username}}</h3>
    <p>Email: {{email}}</p>
    <p>Age: {{age}}</p>
    <div class="actions">
        <a href="/users/{{id}}" class="view-btn">View</a>
        <a href="/users/{{id}}/edit" class="edit-btn">Edit</a>
        <form action="/users/{{id}}?_method=DELETE"  method="POST" style="display:inline;">
             <button type="submit" class="delete-btn">Delete</button>
        </form>
    </div>
</div>